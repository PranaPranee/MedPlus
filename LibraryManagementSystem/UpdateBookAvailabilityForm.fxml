<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.LibraryManagement.controller.UpdateBookAvailability"
            prefWidth="500.0" prefHeight="320.0">

    <VBox layoutX="30.0" layoutY="20.0" spacing="15">

        <Label text="Update Book Availability"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Label text="Book ID:" minWidth="100"/>
            <TextField fx:id="bookIdField" prefWidth="200" editable="false"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Title:" minWidth="100"/>
            <TextField fx:id="titleField" prefWidth="200" editable="false"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Author:" minWidth="100"/>
            <TextField fx:id="authorField" prefWidth="200" editable="false"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Category:" minWidth="100"/>
            <TextField fx:id="categoryField" prefWidth="200" editable="false"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Availability:" minWidth="100"/>
            <ComboBox fx:id="availabilityComboBox" prefWidth="200"/>
        </HBox>

        <Button text="Update Availability"
                onAction="#handleUpdateAvailability"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>

    </VBox>
</AnchorPane>