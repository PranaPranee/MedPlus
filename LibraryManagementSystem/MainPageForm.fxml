<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<StackPane fx:id="rootPane"
	stylesheets="@../application/css/main.css"
	xmlns="http://javafx.com/javafx/24.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.LibraryManagement.controller.MainPageController">

	<VBox alignment="CENTER" spacing="15.0">
		<children>
			<ImageView fitWidth="150" preserveRatio="true"
				smooth="true">
				<image>
					<Image url="@../images/book.png" />
				</image>
			</ImageView>

			<Label styleClass="main-label" text="Library Management System">
				<font>
					<Font name="Arial Bold" size="20.0" />
				</font>
			</Label>
			<Button styleClass="main-button" mnemonicParsing="false"
				onAction="#switchToBooksForm" text="Books" />
			<Button mnemonicParsing="false" styleClass="main-button"
				onAction="#switchToMembersForm" text="Members" />
			<Button mnemonicParsing="false" styleClass="main-button"
			onAction="#switchToIssueForm"
				text="Issue and Return Books" />
		</children>
	</VBox>
</StackPane>
