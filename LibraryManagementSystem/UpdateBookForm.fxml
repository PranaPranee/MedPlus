<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.LibraryManagement.controller.UpdateBookDetails"
            prefWidth="600.0" prefHeight="400.0">

    <VBox spacing="15" layoutX="50.0" layoutY="30.0">
        <Label text="Update Book Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Label text="Title:" minWidth="100"/>
            <TextField fx:id="titleField" prefWidth="200"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Author:" minWidth="100"/>
            <TextField fx:id="authorField" prefWidth="200"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Category:" minWidth="100"/>
            <TextField fx:id="categoryField" prefWidth="200"/>
        </HBox>

        <Button text="Save Changes" onAction="#handleSave" />
    </VBox>
</AnchorPane>